<% if user_signed_in? %>

  <table class='table table-striped table-bordered'>
    <thead class='thead-dark'>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Instagram</th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>

        <!-- hide records that are not the current user's friends -->
        <% if friend.user == current_user %>
        <tr>
          <td>
            <%= link_to friend.first_name + ' ' + friend.last_name, friend %>  
          </td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.instagram %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>

<% else %>

  <h1>Hello World</h1>
  This is my first rails webpage!

<% end %>
